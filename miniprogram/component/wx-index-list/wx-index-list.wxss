.list-warpper {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.list-scroll {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.list-scroll.top{
  padding-top: 90rpx;
}

/* 样式控制  */

.list-title {
  height: 54rpx;
  color: #8F96A0;
  font-size: 25rpx;
  text-align: left;
  margin-left: 31rpx;
  line-height: 54rpx;
}

.list-right-wrapper {
  position: absolute;
  top: 100rpx;
  right: 15rpx;
  padding: 10rpx 0;
  z-index: 2;
}

.right-item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 3rpx 10rpx;
  font-size: 25rpx;
  color: #303741;
}

.list-search {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  z-index: 20;
  background: #FFF;
}


/* 热门城市横排显示样式  */

.list-horizontal {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

/* 搜索无数据  */
.nodata {
  padding-top: 200rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ddd;
}


.nowInCityText{
  height: 113rpx;
  color: #8F96A0;
  font-size: 25rpx;
  text-align: left;
  margin-left: 31rpx;
  line-height: 113rpx;
}
.inCityContent{
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.inCity{
  height: 95rpx;
  line-height: 95rpx;
  width: 23%;
  text-align: center;
  color: #303741;
}