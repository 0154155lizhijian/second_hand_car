Page,.container{
    box-sizing: border-box;
    width: 100%;
    padding: 0;
    margin: 0;
}

.search-container{
    width: 100%;
    position: absolute;
    height: 84.338rpx;
    display: flex;
    align-items: center;
    vertical-align: middle;
    flex-direction: row;
    z-index: 100;
    background:white;
}
.city{
    width: 156.506rpx;
    display:flex;
    flex-direction: row;
    flex-wrap: nowrap;
    overflow:visible;
    align-items: center;
    position: relative;
}
.city::before{
  content: '';
  display: block;
  position: absolute;
  width:12rpx;
  height:12rpx;
  left:15rpx;
  top:25rpx;
  border-bottom:1px solid #8F96A0;
  border-left:1px solid #8F96A0; 
  transform: rotate(45deg)
}
.city_curr{
  width: 126.506rpx;
  color: #5F6670 ;
  line-height: 84.338rpx;
  text-align: right;
  font-size: 27rpx;
  margin-right: 10rpx;
}
.down{
  width: 30rpx;
  text-align: left;
  display: inline-block;
  line-height:84rpx;
}
.search{
    width: 445.904rpx;
}
.call{
    width: 67.265rpx;
}
.user{
    width: 80.325rpx;
}


/* 城市提示层  */
.isCityShow{
    display: block;
}
.isCityHide{
    display: none;
}
.cityZhezhao{
    height: 85%;
    width: 94%;
    margin-top: 15%;
    margin-left: 3%;
    position: fixed;
    background-color:#F5F7FA;
    z-index: 10;
    top: 0;
    left: 0;
    overflow-x: hidden;
    overflow-y: scroll;
}
.cityZhezhao::-webkit-scrollbar {
    display: none;
  }

.cityContent{
    height: 100%;
    width: 100%;
    margin: 0 auto;
}
.nowInCityText{
    height: 113rpx;
    color: #8F96A0;
    font-size: 25rpx;
    text-align: left;
    margin-left: 31rpx;
    line-height: 113rpx;
}
.inCityContent{
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.inCity{
    height: 95rpx;
    line-height: 95rpx;
    width: 25%;
    text-align: center;
    color: #303741;
}
.cityTitle{
    height: 54rpx;
    color: #8F96A0;
    font-size: 25rpx;
    text-align: left;
    margin-left: 31rpx;
    line-height: 54rpx;
}
  /* 关闭滚动条  */
  ::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
  }
  
  .list-search {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    width: 100%;
    height: 90rpx;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    z-index: 20;
    background: #FFF;
  }
  
  .search-title {
    flex-shrink: 0;
    font-size: 28rpx;
    padding-right: 10rpx;
  }
  
  .list-search-box {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    width: 100%;
    height: 70rpx;
    background: #f5f5f5;
    border-radius: 90rpx;
    font-size: 28rpx;
    box-sizing: border-box;
  }
  
  .list-search-box input {
    width: 100%;
    padding-left: 10rpx;
  }
  
  .search-button {
    /* width: 100rpx; */
    flex-shrink: 0;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    margin-left: 10rpx;
  }
/*  end  */