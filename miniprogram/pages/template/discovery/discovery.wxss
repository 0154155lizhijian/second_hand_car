.discovery{
    color: #303741;
    display: flex;
    flex-direction: column;
    align-items: center;
    height:662rpx ;
    width: 750rpx;
}
.dicovery-title{
    height: 89rpx;
    width: 670rpx;
}

.discovery-title-more{
    font-size:25rpx;
    line-height: 110rpx;
    float: right;
    color: #8F96A0;
} 
.dicovery-title-name{
    float: left;
    line-height: 110rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #303741;
}

.discovery-title-more::after{
    content: "";
    display: inline-block;
    position: relative;
    width: 12rpx;
    height: 12rpx;
    left:5rpx;
    top:-2rpx;
    border-top:1px solid #8F96A0;
    border-right:1px solid #8F96A0; 
    transform: rotate(45deg)
}

.discovery-content{
    width: 670rpx;
    height: 573rpx;
}
.discovery-content-items{
    display: flex;
    flex-direction: column;
    width: 670rpx;
    height: 552rpx;
}
.discovery-content-item{
    height: 184rpx;
    width: 670rpx;
    display: flex;
    justify-content: space-between;
}
.discovery-content-contain{
    height: 186rpx;
    width: 670rpx;
    box-sizing: border-box;
}

.discovery-content-left{
    height: 184rpx;
    width: 429rpx;
    display: flex;
    flex-direction: column;
}
.discovery-content-info{
    width: 360rpx;
    height: 130rpx;
    font-size: 28rpx;
    position: relative;
}
.discovery-content-info-text{
    width: 360rpx;
    height: 101rpx;
    font-size: 28rpx;
    position: absolute;
    bottom: 0;
}
.discovery-content-tag{
    
    height: 33rpx;
    /* background-color: #EFF2F6; */
    font-size: 25rpx;
    line-height: 33rpx;
}
.discovery-content-tag-text{
    height: 33rpx;   
}
.discovery-content-tag-text text{
  color: #8F96A0;
  font-size: 25rpx;
  line-height: 33rpx;
  background-color: #EFF2F6;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.discovery-content-right{
    width: 240rpx;
    height: 184rpx;
    display: flex;
    align-items: center; 
}
.discovery-content-right-img{
    width: 240rpx;
    height: 135rpx;
    border-radius:5rpx;
    overflow: hidden;
}

.discovery-content-contain::before{
    content: "";
    display: block;
    position: relative;
    width: 670rpx;
    left:0rpx;
    top: 185rpx;
    border-top:1px solid #EFF2F6;   
}